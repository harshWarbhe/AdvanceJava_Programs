<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
	id="WebApp_ID" version="6.0">
	<display-name>EmployeeOfficeDBApp</display-name>
	<welcome-file-list>
		<welcome-file>search.html</welcome-file>
		
	</welcome-file-list>

	<servlet>
		<servlet-name>emp</servlet-name>
		<servlet-class>com.harsh.servlet.EmployeeSearchServlet</servlet-class>
		
		<init-param>
		<param-name>drive class</param-name>
		<param-value>oracle.jdbc.driver.OracleDriver</param-value>
		</init-param>
		
		<init-param>
		<param-name>url</param-name>
		<param-value>jdbc:oracle:thin:@localhost:1521:orcl</param-value>
		</init-param>
		
		<init-param>
		<param-name>dbuser</param-name>
		<param-value>harsh</param-value>
		</init-param>
		
		<init-param>
		<param-name>dbpwd</param-name>
		<param-value>tiger</param-value>
		</init-param>
		
	</servlet>

	<!-- servlet mapping configuration -->
	<servlet-mapping>
		<servlet-name>emp</servlet-name>
		<url-pattern>/dburl</url-pattern>
	</servlet-mapping>
</web-app>